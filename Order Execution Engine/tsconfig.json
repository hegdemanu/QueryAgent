{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@domain/*": [
        "domain/*"
      ],
      "@infra/*": [
        "infra/*"
      ],
      "@api/*": [
        "api/*"
      ],
      "@dex/*": [
        "dex/*"
      ],
      "@db/*": [
        "db/*"
      ],
      "@events/*": [
        "events/*"
      ],
      "@worker/*": [
        "worker/*"
      ],
      "@state/*": [
        "state/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}